    <aura:attribute name="recordId" type="String" default="{!v.recordId}"/>
    <br/>
    <div class="slds-grid">
    	<div class="slds-col slds-size--6-of-6">
        	<center><h5><b>Lead Convert In Progress Please Wait...</b></h5></center>
    	</div>
    </div>
    <br/>
    
    <aura:handler name="init" value="{!this}" action="{!c.convertLead}"/>

 </aura:component>